{
  "name": "commerce-sdk-isomorphic",
  "version": "1.0.0",
  "private": false,
  "description": "Salesforce Commerce SDK Isomorphic",
  "bugs": {
    "url": "https://github.com/SalesforceCommerceCloud/commerce-sdk-isomorphic/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SalesforceCommerceCloud/commerce-sdk-isomorphic.git"
  },
  "license": "BSD-3-Clause",
  "main": "lib/index.cjs.js",
  "module": "lib/index.esm.js",
  "style": "lib/default.css",
  "files": [
    "lib",
    "LICENSE.txt",
    "README.md"
  ],
  "scripts": {
    "build": "react-scripts build",
    "build:lib": "npx rollup -c",
    "checkSize": "npm-pack-all --output commerce-sdk-isomorphic-with-deps.tgz && bundlesize",
    "doc": "npm run doc:generate",
    "doc:generate": "typedoc --mode modules src/lib/** --external-modulemap \".*/src/lib/([\\w]+)\" --exclude \"src/lib/index.ts\"",
    "eject": "react-scripts eject",
    "fix": "yarn run lint -- --fix",
    "fix:style": "yarn run lint:style -- --fix",
    "lint": "eslint --ext js,jsx,ts,tsx ./src ./scripts",
    "lint:style": "stylelint ./src/",
    "renderTemplates": "ts-node --compiler-options '{\"module\": \"commonjs\", \"target\": \"ES6\" }' generate.ts",
    "start": "HTTPS=true react-scripts start",
    "pretest": "yarn run lint && yarn run lint:style && yarn run checkSize",
    "test": "jest --coverage --testPathIgnorePatterns node_modules src/environment --silent && CI=true yarn testReact",
    "testReact": "react-scripts test --env=jest-environment-jsdom-sixteen src/environment",
    "updateApis": "ts-node --compiler-options '{\"module\": \"commonjs\", \"target\": \"ES6\" }' updateApis.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "CI=true yarn test --passWithNoTests"
    }
  },
  "lint-staged": {
    "package.json": "sort-package-json"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/static/**/*.{js,jsx,ts,tsx}",
      "scripts/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/"
    ],
    "coverageReporters": [
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "dependencies": {
    "cross-fetch": "^3.0.6"
  },
  "devDependencies": {
    "@babel/cli": "7.10.5",
    "@babel/core": "7.10.5",
    "@babel/preset-env": "7.10.4",
    "@babel/preset-react": "7.10.1",
    "@babel/preset-typescript": "^7.10.4",
    "@commerce-apps/raml-toolkit": "^0.5.5",
    "@rollup/plugin-babel": "5.1.0",
    "@rollup/plugin-commonjs": "13.0.0",
    "@rollup/plugin-node-resolve": "8.4.0",
    "@testing-library/jest-dom": "5.11.2",
    "@testing-library/react": "10.4.7",
    "@testing-library/react-hooks": "3.4.1",
    "@testing-library/user-event": "12.0.17",
    "@types/fs-extra": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "autoprefixer": "9.8.5",
    "bundlesize": "^0.18.0",
    "eslint-config-airbnb": "18.1.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-fp": "2.3.0",
    "eslint-plugin-header": "^3.1.0",
    "eslint-plugin-import": "2.21.2",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-jsx-a11y": "6.3.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.20.5",
    "eslint-plugin-react-hooks": "4.0.8",
    "fs-extra": "^9.0.1",
    "handlebars-helpers": "^0.10.0",
    "husky": "4.2.5",
    "jest-environment-jsdom-sixteen": "1.0.3",
    "lint-staged": "10.2.11",
    "nock": "^13.0.4",
    "npm-pack-all": "^1.12.3",
    "npm-run-all": "4.1.5",
    "postcss-preset-env": "6.7.0",
    "prettier": "2.0.5",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "4.0.0",
    "react-test-renderer": "16.13.1",
    "recursive-copy": "2.0.10",
    "rimraf": "3.0.2",
    "rollup": "2.22.2",
    "rollup-plugin-eslint": "7.0.0",
    "rollup-plugin-filesize": "9.0.2",
    "rollup-plugin-includepaths": "0.2.3",
    "rollup-plugin-peer-deps-external": "2.2.3",
    "rollup-plugin-postcss": "3.1.3",
    "rollup-plugin-stylelint": "1.0.0",
    "rollup-plugin-terser": "6.1.0",
    "sort-package-json": "^1.46.0",
    "stylelint": "13.6.1",
    "stylelint-config-standard": "20.0.0",
    "stylelint-order": "4.1.0",
    "typedoc": "^0.17.7",
    "typedoc-plugin-external-module-map": "^1.2.1",
    "typedoc-plugin-nojekyll": "^1.0.1",
    "typescript": "^4.0.2"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "engines": {
    "node": ">=10"
  },
  "bundlesize": [
    {
      "path": "lib/**/*.js",
      "maxSize": "100 kB"
    },
    {
      "path": "commerce-sdk-isomorphic-with-deps.tgz",
      "maxSize": "300 kB"
    }
  ],
  "proxy": "https://SHORTCODE.api.commercecloud.salesforce.com"
}
